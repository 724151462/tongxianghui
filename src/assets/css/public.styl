/* 沾满整行的文字按钮 */

.row-btn{
  width: 750px;
  height: 70px;
  text-align: center;
  line-height: 70px;
  font-size: 22px;
  color: #509fee;
  background: white;
  transition: all 0.2s;
}

.row-btn:active{
  background: #f2f2f2;
  transition: all 0.2s;
}

